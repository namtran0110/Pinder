<%= form_tag new_message_path do %>
    <div class="form-group">
      <label>To: </label>
      <%= text_field :recipient_id, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Subject: </label>
      <%= text_area :subject, class: 'form-control'%>
    </div>
    <div class="form-group">
      <label>Body: </label>
      <%= text_area :body, class: 'form-control'%>
    </div>
    <div class="text-center">
      <%= submit_tag "Send", class: 'white_background_main_button' %>
    </div>
<% end %>
