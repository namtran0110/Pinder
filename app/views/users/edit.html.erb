<%= form_for(current_user) do |f| %>


    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= image_tag current_user.image %>
      <%= f.text_field :image %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
