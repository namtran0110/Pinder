
<style>
  body {
    background-color: #FAFAFA;
  }
</style>
<div class="showcase">
  <div class="container" style="width: 600px;">
    <% if current_user %>
        <% @users.each do |user| %>
            <div class="each_profile">
              <div>
                <p class="username"><%= user.name %></p>
              </div>
              <div class="text-center">
                <%= image_tag user.image_or_default, class: 'user_img' %>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <p class="user_email text-center">
                    <%= link_to user_path(user) do %>
                        <i class="fa fa-eye fa-3x" aria-hidden="true"></i>
                    <% end %>
                  </p>
                </div>
                <div class="col-md-6">
                  <p class="user_email text-center">
                    <%= link_to friendships_create_path(:friend_id => user), :method => :post do %>
                        <i class="fa fa-heart fa-3x heart_button" aria-hidden="true"></i>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>
        <% end %>
    <% end %>
  </div>
</div>

