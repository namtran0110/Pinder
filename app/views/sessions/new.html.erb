<div class="row">
  <div class="col-md-3 no_padding">
    <%= image_tag ('left.png'), class: 'sign_up_img' %>
  </div>
  <div class="col-md-6 no_padding">
    <div class="container Login_form">
      <h1 class="text-center">Log In</h1>
      <hr>
      <%= form_tag sessions_path do %>
          <div class="form-group">
            <label>Email</label>
            <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: "Email" %>
          </div>
          <div class="form-group">
            <label>Password</label>
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Password" %>
          </div>
          <div class="text-center">
            <%= submit_tag "Log In", class: 'white_background_main_button' %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-3 no_padding">
    <%= image_tag ('right.png'), class: 'sign_up_img' %>
  </div>
</div>